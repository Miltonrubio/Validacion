<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/contenedorChecks"
    android:layout_marginBottom="9dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    android:padding="2dp"
    android:background="@drawable/redondeado_contorno_azul"
    android:elevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textPendiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="PENDIENTE"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/descripcionCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:text="Descripcion"
            android:textColor="@color/azulito"
            android:textSize="22dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/maloRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                android:text="Malo" />

            <RadioButton
                android:id="@+id/buenoRadioButton"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bueno" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/regularRadioButton"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Regular" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
