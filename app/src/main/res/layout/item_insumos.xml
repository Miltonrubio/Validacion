<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedorRefaccion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@drawable/redondeado_contorno_azul"
    android:elevation="4dp"
    android:layout_marginHorizontal="3dp"
    android:paddingHorizontal="3dp"
    android:paddingVertical="12dp">


    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        android:paddingVertical="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/nombreRefaccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INSUMO"
            android:textColor="@color/azulitoInyectores"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/precioRefaccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Precio refaccion: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cantidadRefacciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Cantidad de ref."
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/descuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="dESCUENTO"
            android:textColor="@color/rojo"
            android:textSize="16sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/importeTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Importe total"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginEnd="12dp"
        android:padding="3dp"
        android:src="@drawable/gas_pump_solid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
