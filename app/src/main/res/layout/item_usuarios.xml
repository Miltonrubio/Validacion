<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:id="@+id/ContenedorUsuario"
    android:layout_marginHorizontal="4dp"
    android:background="@drawable/rounded_background"
    android:paddingTop="14dp"
    android:paddingHorizontal="3dp"
    android:paddingBottom="5dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ImagenMecanico"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="12dp"
        app:riv_corner_radius="100dp"
        android:scaleType="centerCrop"
        android:layout_marginVertical="5dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NombreMecanico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Nombre usuario"
        android:textSize="20dp"
        android:textColor="@color/azulito"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImagenMecanico" />



    <TextView
        android:id="@+id/telefonoMec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Telefono de usuario"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NombreMecanico" />


    <TextView
        android:id="@+id/cargoMec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:gravity="end"
        android:text="Cargo de usuario"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefonoMec" />


</androidx.constraintlayout.widget.ConstraintLayout>