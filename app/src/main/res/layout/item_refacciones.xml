<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedorRefaccion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:layout_marginVertical="3dp"
    android:background="@color/azulito">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="3dp"
        android:elevation="4dp"
        android:layout_marginHorizontal="3dp"
        android:background="@drawable/rounded_background"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:paddingStart="3dp"
        android:layout_marginStart="9dp"
        android:src="@drawable/box_open_solid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        android:paddingVertical="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/nombreRefaccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="REFACCION"
            android:textColor="@color/azulito"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/precioRefaccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Precio refaccion: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cantidadRefacciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Cantidad de ref."
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/descuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="dESCUENTO"
            android:textColor="@color/rojo"
            android:textSize="16sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/importeTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="Importe total"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone" />


    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


