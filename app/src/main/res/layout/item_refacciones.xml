<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="9dp"
    android:elevation="4dp"
    android:padding="8dp"
    android:background="@drawable/rounded_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:id="@+id/nombreRefaccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:hint="Refaccion"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/azulito"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/precioRefaccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Precio refaccion: "
                    android:textColor="@color/azulito"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cantidadRefacciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cantidad de ref."
                    android:layout_marginTop="12dp"
                    android:textColor="@color/azulito"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>
