<resources>

    <style name="Widget.Theme.Validacion.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>

    </style>

    <style name="Widget.Theme.Validacion.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:navigationBarColor">@color/azulitoSuave</item>
    </style>

    <style name="CustomBottomNavigationLabel">
        <item name="android:background">@color/azulitoSuave</item>
        <item name="android:textColor">@color/azulito</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>


    <style name="RoundedTextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>


    <style name="editTexts">
        <item name="android:background">@drawable/input_redondo</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="RoundedShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


</resources>